
.day {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 60rpx 0;
  font-size: 32rpx;
  border-top: 1px solid rgba(255,255,255,0.25);
  background-image: linear-gradient(rgba(0,0,0,0),rgba(0,0,0,0.1));
  color: #fff;
}

.day>view {
  flex: 1;
  text-align: center;
}

.day image {
  width: 60rpx;
  height: 60rpx;
  margin-left: 60rpx;
}
.left {
  margin-left: 25rpx;
}

.text {
  margin-top: -15rpx;
}

.wea {
  text-align: center;
}