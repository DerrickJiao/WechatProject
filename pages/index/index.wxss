
.head {
  color: #fff;
  background-size: 100% 100%;
  background-position: center top;
  background-repeat: no-repeat;
}

.head .extra {
  padding: 20rpx;
}
.head .extra::after {
  content:'';
  display: block;
  clear: both;
}

.head .extra .city{
  float: left;
}

.head .extra .date{
  float: right;
}

.head .main {
  text-align: center;
}

.head .main .temperature{
  margin-top: 40rpx;
  font-size: 120rpx;
}
.head .main .weather{
  margin-top: 20rpx;
  font-size: 32rpx;
}

.head .others {
  padding: 40rpx;
}
.head .others>view {
  width: 40%;
  margin-top: 20rpx;
  display: inline-block;
}

.hourly {
  border-top: 1px solid rgba(255,255,255,0.25);
  background-image: linear-gradient(rgba(0,0,0,0),rgba(0,0,0,0.1));
  height: 90px;
}
.hourly .wrap {
  width: 700px;
}
.hourly .rap {
  width: 600px;
}
.hourly .hour {
  width: 150rpx;
  text-align: center;
  padding: 10px 0;
  box-sizing: border-box;
  color: #fff;
  font-size: 28rpx;
  display: inline-block;
}
.hourly .wide {
  width:180rpx;
  text-align: center;
  padding: 10px 0;
  box-sizing: border-box;
  color: #fff;
  font-size: 40rpx;
  display: inline-block;
  margin-left: 20rpx;
}
.hourly image {
  width: 60rpx;
  height: 60rpx;
}

.suggestion>view{
  padding: 40rpx 20rpx;
  border-bottom: 1px solid #eee;
}
.suggestion>view:last-child{
  border: none;
}
.suggestion>view::after{
  content:'';
  display: block;
  clear: both;
}
.suggestion .detail {
  margin-left: 40rpx;
}
.suggestion .detail .title {
  font-size: 32rpx;
  color: rgb(10, 10, 10);
}

.suggestion .detail .description {
  margin-top: 20rpx;
  font-size: 26rpx;
  color: rgb(10, 10, 10);
  line-height: 1;
}

.suggestion .head {
  font-size: 36rpx;
}